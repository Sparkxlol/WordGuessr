            <TextBox TextChanged="LetterTextBox_TextChanged" PreviewKeyDown="LetterTextBox_PreviewKeyDown" MaxLength="1" Width="100"></TextBox>
            <TextBox TextChanged="LetterTextBox_TextChanged" PreviewKeyDown="LetterTextBox_PreviewKeyDown" MaxLength="1" Width="100"></TextBox>
            <TextBox TextChanged="LetterTextBox_TextChanged" PreviewKeyDown="LetterTextBox_PreviewKeyDown" MaxLength="1" Width="100"></TextBox>
        </StackPanel>

        <StackPanel x:Name="Layer2" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox TextChanged="LetterTextBox_TextChanged" PreviewKeyDown="LetterTextBox_PreviewKeyDown" MaxLength="1" Width="100"></TextBox>
            <TextBox TextChanged="LetterTextBox_TextChanged" PreviewKeyDown="LetterTextBox_PreviewKeyDown" MaxLength="1" Width="100"></TextBox>
