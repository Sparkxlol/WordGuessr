<Window x:Class="WordGuessr.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordGuessr"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="Choose Difficulty" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Padding="10"/>
            <Button Content="Easy" Width="150" Click="Easy_Click" Background="Green" FontWeight="SemiBold"/>
            <Button Content="Medium" Width="150" Click="Medium_Click" Background="Yellow" FontWeight="SemiBold"/>
            <Button Content="Hard" Width="150" Click="Hard_Click" Background="Red" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
